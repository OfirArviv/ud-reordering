{
  "vocabulary": {
    "type": "from_files",
    "directory": "experiments/datasets/dataset_seq2seq/vocab/"
  },
  "train_data_path": "experiments/datasets/dataset_seq2seq/english_dev.tsv",
  "test_data_path": "experiments/datasets/dataset_seq2seq/hindi_test.tsv",
  "evaluate_on_test": true,
  "dataset_reader": {
    "type": "seq2seq_length_filtering",
    "source_add_start_token": false,
    "source_add_end_token": false,
    "source_max_tokens": 100,
    "target_max_tokens": 100,
    "source_tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "google/mt5-base"
    },
    "target_tokenizer": {
      "type": "whitespace"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "pretrained_transformer",
        "model_name": "google/mt5-base",
        "max_length": 512
      }
    },
    "target_token_indexers": {
      "target_tokens": {
        "type": "single_id",
        "namespace": "target_tokens"
      }
    }
  },
  "model": {
    "type": "mt5_copynet",
    "model_name": "google/mt5-base",
    "target_namespace": "target_tokens",
    "pointer_vocab_size": 314,
    "beam_search": {
      "beam_size": 4,
      "max_steps": 50
    },
    "target_embedder": {
      "embedding_dim": 768,
      "vocab_namespace": "target_tokens"
    }
  },
  "data_loader": {
    "batch_size": 16,
    "shuffle": true
  },
  "trainer": {
    "validation_metric": "+f1",
    "run_confidence_checks": false,
    "num_epochs": 50,
    "optimizer": {
      "type": "huggingface_adamw",
      "lr": 3e-5,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8,
      "correct_bias": true
    },
    "grad_norm": 1.0
  }
}
