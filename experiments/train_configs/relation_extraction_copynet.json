{
 "vocabulary": {
    "type": "from_files",
    "directory":  "experiments/datasets/dataset_seq2seq/vocab/"
  },
  "dataset_reader": {
    "type": "seq2seq_length_filtering",
    "source_max_tokens": 10,
    "target_max_tokens": 10,
    "source_add_start_token": false,
    "source_add_end_token": false,
    "source_tokenizer": {
          "type": "pretrained_transformer",
          "model_name": "xlm-roberta-base"
        },
    "target_tokenizer": {
       "type": "whitespace"
    },
    "source_token_indexers": {
      "tokens": {
        "type": "pretrained_transformer",
        "model_name": "xlm-roberta-base",
        "max_length": 512
      }
    },
    "target_token_indexers": {
      "target_tokens": {
        "type": "single_id",
        "namespace": "target_tokens"
      }
    }
  },
  "train_data_path": "experiments/datasets/dataset_seq2seq/english_dev.tsv",
  "validation_data_path": "experiments/datasets/dataset_seq2seq/english_dev.tsv",
  "model": {
    "type": "composed_seq2seq",
    "source_text_embedder": {
      "token_embedders": {
        "tokens": {
            "type": "pretrained_transformer",
            "model_name": "xlm-roberta-base",
            "max_length": 512,
            "train_parameters":  true
        }
      }
    },
    "encoder": {
      "type": "pass_through",
      "input_dim": 768
    },
    "decoder": {
      "type": "auto_regressive_seq_decoder_copynet_v4",
      "scheduled_sampling_ratio": 0,
      "beam_search": {
          "beam_size": 2,
          "max_steps": 30
        },
      "decoder_net": {
        "type": "stacked_self_attention",
        "decoding_dim": 768,
        "target_embedding_dim": 768,
        "feedforward_hidden_dim": 768,
        "num_layers": 2,
        "num_attention_heads": 4
      },
      "target_embedder": {
        "embedding_dim": 768,
        "vocab_namespace": "target_tokens"
      },
      "target_namespace": "target_tokens",
      "token_based_metric": ["re_fscore", "em_accuracy"],
      "label_smoothing_ratio": 0.1,
       "pointer_vocab_size": 314
    }
  },
  "data_loader": {
    "batch_sampler": {
      "type": "bucket",
      "padding_noise": 0.0,
      "batch_size":2
    }
  },
  "trainer": {
    "num_epochs": 100,
    "grad_norm": 5.0,
    "patience": 10,
    "validation_metric": "+em_accuracy",
    "optimizer": {
      "type": "huggingface_adamw",
      "lr": 1e-5,
      "weight_decay": 0.01
    }
  }
}